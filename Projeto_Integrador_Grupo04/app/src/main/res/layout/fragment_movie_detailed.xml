<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".moviesseries.view.MovieDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@style/CollapsingToolbar.Expanded.Text"
            app:contentScrim="@color/color_white"
            android:background="@color/color_white"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ImageView
                android:id="@+id/ivDetailedBackdrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:src="@drawable/cover_django" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivDetailedPoster"
                    android:layout_width="@dimen/dim_120_dp"
                    android:layout_height="@dimen/dim_200_dp"
                    android:layout_marginStart="@dimen/dim_15_dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover_django"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvDetailedTitle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:lines="2"
                    android:text="@string/title_series_movies"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/dim_24_sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivDetailedPoster" />

                <TextView
                    android:id="@+id/tvDetailedDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/title_series_movies"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/dim_15_dp"
                    app:layout_constraintStart_toEndOf="@+id/ivDetailedPoster"
                    app:layout_constraintTop_toBottomOf="@+id/tvDetailedTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarDetailedMovie"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/title_series_movies"
                app:popupTheme="@style/AppTheme"
                android:layout_marginTop="24dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/imgReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_marginStart="@dimen/dim_10_dp"
                    android:layout_marginTop="@dimen/dim_10_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/toolbarBottomBar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_5_dp"
            android:background="@color/colorPrimary"
            app:layout_anchor="@+id/appBarLayout2"
            app:layout_anchorGravity="bottom|center"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailedTitleOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_overview"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dim_21_sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dim_10_dp"
                android:layout_marginTop="@dimen/dim_10_dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvDetailedOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim_10_dp"
                android:text="@string/title_overview"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailedTitleOverview"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvDetailedTitleCasting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_casting"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dim_21_sp"
                android:layout_marginTop="@dimen/dim_15_dp"
                android:layout_marginStart="@dimen/dim_10_dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailedOverview"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailedCasting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/example_cast"
                app:layout_constraintTop_toBottomOf="@id/tvDetailedTitleCasting"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>